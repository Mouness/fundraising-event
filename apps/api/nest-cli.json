{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [
            {
                "include": "assets/**/*",
                "outDir": "dist/apps/api"
            },
            {
                "include": "features/mail/templates/**/*",
                "outDir": "dist/apps/api/features/mail/templates"
            }
        ],
        "watchAssets": true
    }
}
